<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <LangVersion>latest</LangVersion>
        <PackageVersion>1.0.0-beta.1</PackageVersion>
        <Title>SunEngine</Title>
        <Authors>Dmitrii Polianin</Authors>
        <Description>Web engine with blog, forum and articles functionalities on Asp.Net Core and Vue.Js.</Description>
        <Copyright>Dmitrii Polianin</Copyright>
        <PackageProjectUrl>https://github.com/Dmitrij-Polyanin/SunEngine</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/Dmitrij-Polyanin/SunEngine/blob/master/licence.md</PackageLicenseUrl>
        <PackageTags>forum, blog, cms, web engine, web, engine</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="FluentMigrator" Version="3.1.3" />
        <PackageReference Include="Flurl" Version="2.8.1" />
        <PackageReference Include="HtmlSanitizer" Version="4.0.207" />
        <PackageReference Include="linq2db" Version="2.6.4" />
        <PackageReference Include="linq2db.Identity" Version="2.0.1" />
        <PackageReference Include="Microsoft.AspNetCore.App" Version="2.2.2" />
        <PackageReference Include="Microsoft.Data.Sqlite" Version="2.2.2" />
        <PackageReference Include="MySql.Data" Version="8.0.15" />
        <PackageReference Include="NJsonSchema" Version="9.13.22" />
        <PackageReference Include="Npgsql" Version="4.0.5" />
        <PackageReference Include="SixLabors.Fonts" Version="1.0.0-beta0008" />
        <PackageReference Include="SixLabors.ImageSharp" Version="1.0.0-beta0006" />
        <PackageReference Include="SixLabors.ImageSharp.Drawing" Version="1.0.0-beta0006" />
        <PackageReference Include="SixLabors.Shapes" Version="1.0.0-beta0008" />
    </ItemGroup>


    <ItemGroup>
        <Content Update="SunEngine.json">
            <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Update="local.SunEngine.json">
            <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Update="LogConfig.dev.json">
            <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Update="LogConfig.json">
            <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Update="wwwroot\UploadImages\_\default-avatar.svg">
          <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>


    <ItemGroup>
        <Content Include="wwwroot">
            <CopyToOutputDirectory>None</CopyToOutputDirectory>
        </Content>
       
    </ItemGroup>
    

    <ItemGroup>
        <_ContentIncludedByDefault Remove="Settings\appsettings.Development.json" />
        <_ContentIncludedByDefault Remove="Settings\appsettings.json" />
        <_ContentIncludedByDefault Remove="Settings\SunEngine.json" />
    </ItemGroup>
    
   
    <PropertyGroup>
        <ServerGarbageCollection>false</ServerGarbageCollection>
    </PropertyGroup>

</Project>
